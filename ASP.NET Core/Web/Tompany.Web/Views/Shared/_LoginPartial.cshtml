@using Tompany.Common
@using Tompany.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (this.SignInManager.IsSignedIn(User))
{
    <li>
        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Profile" asp-route-username="@User.Identity.Name">Profile</a>
    </li>
    <li>
        <a asp-controller="Notifications" asp-action="Index">
            <span class="badge notificationCircle notificationPulse" id="notificationCount">10</span>
        </a>
    </li>
    <li>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
    </li>
}
else
{
    <li>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
