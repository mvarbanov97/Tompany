@model Tompany.Web.ViewModels.Cars.CarListViewModel;
@{
    this.ViewData["Title"] = "Registered vehicles";
}

@foreach (var car in Model.Cars)
{
    <div class="card mb-3">
        <div class="card-header bg-light">
            <i class="fas fa-user-edit"></i>@car.Brand
            <div class="row mt-2">
                <div class="col-auto">
                    <span class="h5">
                        <span class="text-muted align-top">От</span>
                        <span class="align-top">@car.Model</span>
                    </span>
                </div>
                <div class="col-auto d-none d-md-block">
                    <i class="fas fa-arrow-circle-right"></i>
                </div>
                <div class="col-auto">
                    <span class="h5">
                        <span class="text-muted align-top">До</span>
                        <span class="align-top">@car.Color</span>
                    </span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-xl-6">
                    <span class="text-muted align-top">Year of Manufacture: </span>
                    <span class="align-top">@car.YearOfManufacture</span>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-block d-lg-none">
                    <span class="text-muted align-top">Seats: </span>
                    <span class="align-top">@car.Seats</span>
                </div>
            </div>
            <hr />
            <div class="card-body">
                <div class="row">
                    <span class="text-muted align-top">Air conditioning: </span>
                    <span>@(car.IsAirConditiningAvailable.Equals(true) ? "Yes" : "No")</span>
                </div>
                <div class="row">
                    <i class="material-icons md-18 center text-success"></i> <span class="text-muted">Luggage space: </span>
                    <span>@(car.IsLuggageAvaliable.Equals(true) ? "Yes" : "No")</span>
                </div>
                <div class="row">
                    <i class="material-icons md-18 center text-success"></i> <span class="text-muted">Pets: </span>
                    <span>@(car.IsAllowedForPets.Equals(true) ? "Yes" : "No")</span>
                </div>
                <div class="row">
                    <i class="material-icons md-18 center text-success"></i> <span class="text-muted">Smoking: </span>
                    <span>@(car.IsSmokingAllowed.Equals(true) ? "Yes" : "No")</span>
                </div>
            </div>
        </div>
        <div class="col-6 d-inline-block d-lg-inline-block">
                <a type="submit" class="btn btn-outline-success" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id">Edit</a>
                <a type="submit" class="btn btn-outline-danger" asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id">Delete</a>
        </div>
    </div>
}
