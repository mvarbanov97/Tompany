@model Tompany.Web.ViewModels.Trips.TripViewModel;
@{
    this.ViewData["Title"] = "All trips";
}

@foreach (var item in Model.Trips)
{
    <div class="card mb-3">
        <div class="card-header bg-white">
            <i class="fas fa-user-edit"></i>@item.UserUserName
            <div class="row mt-2">
                <div class="col-auto">
                    <span class="h5">
                        <span class="text-muted align-top">От</span>
                        <span class="align-top">@item.FromCity</span>
                    </span>
                </div>
                <div class="col-auto d-none d-md-block">
                    <i class="fas fa-arrow-circle-right"></i>
                </div>
                <div class="col-auto">
                    <span class="h5">
                        <span class="text-muted align-top">До</span>
                        <span class="align-top">@item.ToCity</span>
                    </span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-xl-6">
                    <i class="fas fa-calendar-alt"></i>
                    <span class="text-muted align-top">Дата: </span>
                    <span class="align-top">@item.DateOfDeparture</span>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-block d-lg-none">
                    <i class="fas fa-car"></i>
                    <span class="text-muted align-top">Автомобил: </span>
                    <span class="align-top">@item.CarModel</span>
                </div>
                <div class="col-12 col-xl-6">
                    <i class="fas fa-chair"></i>
                    <span class="text-muted align-top">Mеста: </span>
                    <span class="align-top">@item.CarSeats</span>
                </div>
            </div>
            <div class="row">
            </div>
            <div class="row">
            </div>
            <div class="row">
                <div class="col">
                    <i class="fas fa-info-circle"></i>
                    <span class="text-muted align-top">Информация:</span>
                    <span class="align-top">@item.AdditionalInformation</span>

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card bg-light">
                        <div class="card-body">
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}