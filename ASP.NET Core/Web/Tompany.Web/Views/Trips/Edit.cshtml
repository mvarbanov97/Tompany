@model TripEditInputModel
@{
    this.ViewData["Title"] = "Edit Page";
    var destinations = Model.Destinations.Select(x => new SelectListItem(x.Name, x.Name));
    var cars = Model.Cars.Select(x => new SelectListItem(x.CarBrandName, x.Id.ToString()));
}

<div id="banner-area">
    <img src="~/images/banner/contactFormBanner.jpeg" width="1900" height="400" border="1" alt="" />
    <div class="parallax-overlay"></div>
    <div class="banner-title-content">
        <div class="text-center">
            <h2>Edit Trip Post</h2>
            <ul class="breadcrumb">
                <li>Home</li>
                <li><a asp-area="" asp-controller="Trips" asp-action="Index"> Trips</a></li>
                <li><a asp-area="" asp-controller="Trips" asp-action="Edit"> Edit Trip post</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <form id="contact-form" class="mb-0" enctype="multipart/form-data" asp-area="" asp-controller="Trips" asp-action="Edit" method="post">
        <hr />
        <div class="container">
            <div class="form-group">
                <label asp-for="FromDestinationName"></label>
                <select asp-for="FromDestinationName" asp-items="destinations" class="form-control col-md-12">
                    <option selected="" disabled="">--Going from--</option>
                </select>
                <span asp-validation-for="FromDestinationName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ToDestinationName"></label>
                <select asp-for="ToDestinationName" asp-items="destinations" class="form-control col-md-12">
                    <option selected="" disabled="">--Going to--</option>
                </select>
                <span asp-validation-for="ToDestinationName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="DateAsString"></label>
                <input asp-for="DateOfDeparture" class="form-control col-md-12" />
                <span asp-validation-for="DateOfDeparture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerPassenger"></label>
                <input asp-for="PricePerPassenger" class="form-control col-md-12" />
                <span asp-validation-for="PricePerPassenger" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInformation"></label>
                <input asp-for="AdditionalInformation" class="form-control col-md-12" />
                <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarId"></label>
                <select asp-for="CarId" asp-items="cars" class="form-control col-md-12">
                    <option selected="" disabled="">--Choose vehicle--</option>
                </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="from-group">
                <button type="submit" class="btn btn-primary">Save changes</button>

            </div>
        </div>

    </form>
</div>


