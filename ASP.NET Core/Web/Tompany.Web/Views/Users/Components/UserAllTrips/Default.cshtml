@model TripListViewModel

<a class="btn btn-primary" asp-controller="Trips" asp-action="Create">Create Trip</a>

<div class="tab-pane fade in active">
    @foreach (var userTrip in Model.Trips)
    {
        <div class="center" style="margin-top:100px">
            <div class="card green">
                <div class="additional">

                    <div class="user-card">
                        <div class="level center">
                            Level 13
                            <img src="~/images/NoAvatarProfileImage.png" />
                        </div>
                        <div class="points center">
                            5,312 Points
                        </div>

                    </div>
                    <a asp-controller="Trips" asp-action="Details" asp-route-id="@userTrip.Id">

                        <div class="more-info">
                            <h1>@userTrip.UserUserName</h1>
                            <div class="coords">
                                <span>Created On</span>
                                <span>@userTrip.CreatedOn</span>
                            </div>
                            <div class="coords">
                                <span>Seats</span>
                                <span>@userTrip.Passengers.Count() / @userTrip.Car.Seats</span>
                            </div>
                            <div class="coords">
                                <span>Price per passanger</span>
                                <span>@userTrip.PricePerPassenger BGN</span>
                            </div>
                            <div class="stats">
                                <div>
                                    <div class="title">Awards</div>
                                    <i class="fa fa-trophy"></i>
                                    <div class="value">2</div>
                                </div>
                                <div>
                                    <div class="title">Matches</div>
                                    <i class="fa fa-gamepad"></i>
                                    <div class="value">27</div>
                                </div>
                                <div>
                                    <div class="title">Pals</div>
                                    <i class="fa fa-group"></i>
                                    <div class="value">123</div>
                                </div>
                                <div>
                                    <div class="title">Coffee</div>
                                    <i class="fa fa-coffee"></i>
                                    <div class="value infinity">∞</div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="general">
                    <h1>@userTrip.UserUserName</h1>
                    <div class="coords">
                        <span>Going from</span>
                        <span>/</span>
                        <span>@userTrip.FromDestinationName</span>
                    </div>
                    <div class="coords">
                        <span>Going to</span>
                        <span>/</span>
                        <span>@userTrip.ToDestinationName</span>
                    </div>
                    <div class="coords">
                        <span>Date of departure</span>
                        <span>@userTrip.DateAsString</span>
                    </div>
                    <span class="more">Mouse over the card for more info</span>
                </div>
            </div>
        </div>
    }
</div>