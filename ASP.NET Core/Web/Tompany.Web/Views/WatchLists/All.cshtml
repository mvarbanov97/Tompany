@{
    ViewData["Title"] = "Обяви добавени за следене";
}

@model List<Tompany.Web.ViewModels.WatchListTrips.WatchListTripViewModel>

<div class="mobile-fondsize-20 h2">@ViewData["Title"]</div>
<div class="container mobile-fondsize-11">
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-sm d-flex justify-content-center">Град от</th>
                <th scope="col" class="col-sm d-flex justify-content-center"></th>
                <th scope="col" class="col-sm d-flex justify-content-center">До град</th>
                <th scope="col" class="col-sm d-flex justify-content-center"></th>
                <th scope="col" class="col-sm d-flex justify-content-center" ">Дата</th>
                <th scope="col" class="col-sm d-flex justify-content-center"></th>
                <th scope="col" class="col-sm d-flex justify-content-center" ">

                </th>
                <th scope="col" class="col-sm d-flex justify-content-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr class="row">
                    <td class="">
                        <a asp-controller="Trips" asp-action="Details" asp-route-id="@trip.TripId">
                            <i class="fa fa-eye"></i>
                        </a>
                    </td>
                    <td class="col-sm-2">
                        <p>@trip.TripFromDestinationName</p>
                    </td>
                    <td class="col-4 d-flex justify-content-center">
                        @trip.TripToDestinationName
                    </td>
                    <td class="col-sm-4">
                        @trip.TripDateOfDeparture.ToString("d")
                    </td>
                    <td class="col-sm">
                        <a asp-controller="WatchLists" asp-action="Delete" asp-route-tripId="@trip.TripId" class="btn btn-outline-danger btn-sm"><i class="fas fa-times-circle"></i> Премахни</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count() == 0)
    {
        <p>Все още нямате добавени обяви за следене.</p>
    }
</div>