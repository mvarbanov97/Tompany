@model TripListViewModel
@{
    this.ViewData["Title"] = "All trips";
    var currentUser = UserManager.GetUserAsync(this.User);
    var trips = Model.Trips.Select(x => new SelectListItem(x.DateOfDeparture.ToString(), x.DateOfDeparture.ToString()));
}

<div id="banner-area">
    <img src="~/images/banner/country-road-along-rocky-mountains-royalty-free-image-678834219-1550781633.jpg" width="1900" height="400" alt="" />
    <div class="parallax-overlay"></div>
    <div class="banner-title-content">
        <div class="text-center">
            <h2>All Trips Page</h2>
            <ul class="breadcrumb">
                <li>Home</li>
                <li><a asp-area="" asp-controller="Trips" asp-action="Index"> Trips</a></li>
                <li><a class="btn btn-primary solid" asp-area="" asp-controller="Trips" asp-action="Create"> Create Trips Post</a></li>
            </ul>
        </div>
    </div>
</div>
<section id="main-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await this.Html.PartialAsync("_TripFilterForm", Model.SearchQuery)
            </div>
            <div class="col-lg-9">
                <div id="searchContainer">
                    <div id="searchResult">
                        @foreach (var trip in Model.Trips)
                        {
                            <div class="center" style="left:75%">
                                <div class="card green">
                                    <div class="additional">
                                        <div class="user-card">
                                        </div>
                                        <a asp-controller="Trips" asp-action="Details" asp-route-id="@trip.Id">
                                            <div class="more-info">
                                                <h1>@trip.UserUserName</h1>
                                                <div class="coords">
                                                    <span>Created On</span>
                                                    <span>@trip.CreatedOn</span>
                                                </div>
                                                <div class="coords">
                                                    <span>Seats</span>
                                                    <span>@trip.Passengers.Count() / @trip.Car.Seats</span>
                                                </div>
                                                <div class="coords">
                                                    <span>Price per passanger</span>
                                                    <span>@trip.PricePerPassenger BGN</span>
                                                </div>
                                                <div class="stats">
                                                    <div>
                                                        <div class="title">Rating</div>
                                                        <i class="fa fa-star"></i>
                                                        <div class="value">2</div>
                                                    </div>
                                                    <div>
                                                        <div class="title">Matches</div>
                                                        <i class="fa fa-gamepad"></i>
                                                        <div class="value">27</div>
                                                    </div>
                                                    <div>
                                                        <div class="title">Pals</div>
                                                        <i class="fa fa-group"></i>
                                                        <div class="value">123</div>
                                                    </div>
                                                    <div>
                                                        <div class="title">Coffee</div>
                                                        <i class="fa fa-coffee"></i>
                                                        <div class="value infinity">∞</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>

                                    </div>
                                    <div class="general">
                                        <h1>@trip.UserUserName</h1>
                                        <div class="coords">
                                            <span>Going from</span>
                                            <span>/</span>
                                            <span>@trip.FromDestinationName</span>
                                        </div>
                                        <div class="coords">
                                            <span>Going to</span>
                                            <span>/</span>
                                            <span>@trip.ToDestinationName</span>
                                        </div>
                                        <div class="coords">
                                            <span>Date of departure</span>
                                            <span>@trip.DateAsString</span>
                                        </div>
                                        <span class="more">Mouse over the card for more info</span>
                                    </div>
                                </div>
                            </div>


                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


<div class="container" style="align:center">
    <nav>
        <ul class="pagination center">
            @if (this.Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Trips" asp-action="Index" asp-route-page="@(this.Model.CurrentPage - 1)">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }


            @for (int i = 1; i <= this.Model.PagesCount; i++)
            {
                var active = i == this.Model.CurrentPage ? "active" : string.Empty;

                <li class="page-item @active">
                    <a class="page-link" asp-controller="Trips" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

            @if (this.Model.CurrentPage == this.Model.PagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Trips" asp-action="Index" asp-route-page="@(this.Model.CurrentPage + 1)">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>
